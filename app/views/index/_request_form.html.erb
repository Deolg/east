<%= form_for @request, url: {action: "create_request"}, html: {class: "nifty_form"}, method: :post do |f| %>
  <div class="form-group">
    <%= f.text_field :from, class: "form-control", placeholder: "Как к Вам можно обращаться?"%>
  </div>
  <div class="form-group">
    <%= f.text_area :body, size: "60x12", class: "form-control", placeholder: "Ваш вопрос?"%>
  </div>
  <div class="form-group"> 
    <%= f.text_field :address, class: "form-control", placeholder: "Как с Вами можно свзаться?" %>
  </div>
  <%= f.submit "Задать вопрос", class: 'btn btn-primary' %>
<% end %>